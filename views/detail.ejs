<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Contact's Detail</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        There's no data about this contact. <br />
        <a href="/contact" class="alert-link fw-normal">&laquo; Back to Contact Page</a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.phonenum %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.name %>" class="btn btn-info badge">Edit</a>
          <!-- <a href="/contact/delete/<%= contact.name %>" class="btn btn-danger badge" onclick="return confirm('Are you sure?')">Delete</a> -->
          <form method="POST" action="/contact?_method=DELETE" class="d-inline">
            <input type="hidden" name="name" value="<%= contact.name %>" />
            <button type="submit" class="btn btn-danger badge" onclick="return confirm('Are you sure?')">Delete</button>
          </form>
          <a href="/contact" class="card-link d-block mt-3">&laquo; Back to Contact Page</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
