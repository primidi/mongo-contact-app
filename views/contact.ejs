<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Contacts list</h2>

      <a href="/contact/add" class="btn btn-primary mb-3"><i class="bi bi-plus"></i> Add New Data</a>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <div class="alert alert-danger fw-bold" role="alert">Contact list is empty</div>
          <% } %> <% contacts.forEach((contact, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.name %></td>
            <td><%= contact.phonenum %></td>
            <td>
              <a href="/contact/<%= contact.name %> " class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
